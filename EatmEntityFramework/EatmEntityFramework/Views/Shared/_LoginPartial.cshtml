@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @if (Session["Name"] != null)
{
    <li style="color: white">@Html.Label("Welcome, Mr " + @Session["Name"].ToString(), htmlAttributes: new { id = "loginLink" })</li>
}
        @if (Session["Name"] == null)
{
    <li>@Html.ActionLink("Login", "Login", "Eatm", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
@if (Session["Name"] != null)
{
    <li>@Html.ActionLink("Logout", "Logout", "Eatm", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
    </ul>
}
